@{
    ViewData["Title"] = "旅行検索";
}

<h1>旅行検索</h1>

<form asp-action="Search" method="post">
    <label for="keyword">キーワード:</label>
    <input type="text" id="keyword" name="keyword" required />

    <label for="prefectureCode">都道府県コード:</label>
    <input type="text" id="prefectureCode" name="prefectureCode" required />

    <button type="submit">検索</button>
</form>

@if (ViewBag.SearchResults != null)
{
    <h2>検索結果</h2>
    <pre>@ViewBag.SearchResults</pre>
}
