@model dynamic

<!DOCTYPE html>
<html>
<head>
    <title>TravelApp - ホーム</title>
</head>
<body>
    <h1>ホテル一覧</h1>
    <ul>
        @foreach (var hotel in Model.Hotels)
        {
            <li>
                <h2>@hotel.Name</h2>
                <p>住所: @hotel.Address</p>
                <p>料金: ¥@hotel.MinCharge</p>
                <img src="@hotel.ImageUrl" alt="@hotel.Name" style="width:200px;">
            </li>
        }
    </ul>

    <h1>観光地一覧</h1>
    <ul>
        @foreach (var attraction in Model.Attractions)
        {
            <li>
                <h2>@attraction.Name</h2>
                <p>@attraction.Description</p>
            </li>
        }
    </ul>
</body>
</html>
